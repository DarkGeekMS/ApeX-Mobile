<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/select_option_menu">
<LinearLayout
    android:background="@color/browser_actions_bg_grey"
    android:layout_marginStart="40dp"
    android:layout_marginTop="150dp"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="350dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/userProfileId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profilepic"/>
    <TextView
        android:layout_marginStart="90dp"
        android:layout_marginBottom="10dp"
        android:text="Karma : 20"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:id="@+id/userprofileKrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            app:srcCompat="@drawable/profile"
            android:id="@+id/viewprofileOption"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/viewUserProfileData"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="View useer Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            app:srcCompat="@drawable/ic_email_read_gray"
            android:id="@+id/sendHimMessage"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/SendUserMessage"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="send a message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            app:srcCompat="@drawable/block_user"
            android:id="@+id/blockuserimage"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/blockuseroption"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:text="Block user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>